<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns:dbtool-orm="http://www.kwanza-systems.ru/schema/dbtool-orm"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd http://www.kwanza-systems.ru/schema/dbtool-orm http://www.kwanza-systems.ru/schema/dbtool-orm.xsd">


    <bean id="propertyPlaceholderConfigurer"
          class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="locations">
            <list>
                <value>classpath:db_mssql.properties</value>
            </list>
        </property>
    </bean>


    <import resource="classpath:dbtool-config.xml"/>
    <import resource="classpath:dbtool-orm-config.xml"/>


    <dbtool-orm:entityMapping scan-package="ru.kwanza.dbtool.orm.impl.abstractentity"/>


    <bean class="ru.kwanza.dbtool.orm.impl.querybuilder.QueryTest$InitDB"/>
    <bean id="dataSource" destroy-method="close" class="org.apache.commons.dbcp.BasicDataSource">
        <property name="driverClassName" value="${jdbc.driverClass}"/>
        <property name="url" value="${jdbc.connectionUrl}"/>
        <property name="username" value="${jdbc.username}"/>
        <property name="password" value="${jdbc.password}"/>
    </bean>
</beans>